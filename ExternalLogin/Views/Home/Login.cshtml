@model ExternalLogin.Models.User.User

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<h4>User</h4>

@if (TempData["NotExist"] != null)
{
    <div class="alert alert-warning">
        @TempData["NotExist"].ToString()
    </div>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-route="LoginPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
            <div class="col-md-12">
                <a href="/provider/Google" class="btn btn-success btn-block">Google</a>
            </div>
            <div class="col-md-12">
                <a href="/provider/Facebook" class="btn btn-info btn-block">Facebook</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
